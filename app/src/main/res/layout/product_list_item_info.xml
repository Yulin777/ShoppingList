<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <TextView
        android:id="@+id/product_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textColor="#000"
        android:textDirection="rtl"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_item_amount_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text=" x "
        android:textColor="#000"
        android:textDirection="rtl"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/product_item_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textColor="#000"
        android:textDirection="rtl"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/product_item_amount_prefix"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_item_size_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text=" ,"
        android:textColor="#000"
        android:textDirection="rtl"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/product_item_amount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textColor="#000"
        android:textDirection="rtl"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/product_item_size_prefix"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>